<h1><%= @task.title %> <sup>( <%= @task.id %> of <%= @tasks.size %> )</sup></h1>
<h3><%= link_to 'Edit task', edit_path(@task) %></h3>
<hr>

<div>
  <h3>Details:</h3>
  <p>
    <%= @task.details %>
  </p>
  <hr>
  <h3>Task completed?</h3>
  <p>
    <%= @task.completed ? 'Complete' : 'Outstanding'  %>
  </p>
  <%= link_to 'Back to list', tasks_path %>
</div>
