<h1><%= @task.title %> <sup>( <%= @task.id %> of <%= @tasks.size %> )</sup></h1>
<h3><%= link_to 'Edit', edit_task_path(@task) %></h3>
<h3>
    <%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</h3>
<hr>
<div>
  <h3>Details:</h3>
  <p>
    <%= @task.details %>
  </p>
  <hr>
  <h3>Task completed?</h3>
  <p>
    <%= @task.completed ? 'Complete' : 'Outstanding'  %>
  </p>
  <%= link_to 'Back to list', tasks_path %>
</div>
